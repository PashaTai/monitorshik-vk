# VK API Configuration
# Получить токен: https://vk.com/apps?act=manage
# Необходимые права: wall, offline
VK_ACCESS_TOKEN=your_vk_access_token_here

# ID или screen name группы/пользователя для мониторинга
# Примеры форматов:
#   Для групп:
#     - Числовой ID: 12345678
#     - С префиксом: club12345678
#     - Screen name: parfenchikov_karelia
#     - Полная ссылка: https://vk.com/parfenchikov_karelia
#   Для пользователей:
#     - Screen name: aparfenchikov, durov
#     - С префиксом: id12345
#     - Полная ссылка: https://vk.com/aparfenchikov
VK_GROUP_ID=your_group_id_or_screen_name

# Telegram Bot Configuration
# Получить токен: написать @BotFather в Telegram, команда /newbot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID чата для отправки уведомлений
# Получить ID: написать @userinfobot в Telegram
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Параметры мониторинга (опционально, есть значения по умолчанию)
# Количество постов для проверки
POSTS_TO_CHECK=10

# Количество комментариев на пост
COMMENTS_PER_POST=20

# Интервал проверки в секундах
CHECK_INTERVAL=60

# Задержка между запросами к VK API (секунды)
REQUEST_DELAY=0.4

# Лимит размера кэша (очистка при превышении)
CACHE_LIMIT=1000

